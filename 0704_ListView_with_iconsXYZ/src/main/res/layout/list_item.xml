<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/m0704_imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/p100"
        android:layout_weight="@dimen/p100"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@string/m0704_descript"
        android:padding="@dimen/Margins"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/img01th" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m0704_t001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m0704_t001"
            android:textColor="@color/White"
            android:textSize="@dimen/fontsize" />

        <TextView
            android:id="@+id/m0704_t002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m0704_t002"
            android:textColor="@color/Yellow"
            android:textSize="@dimen/fontsize" />

    </LinearLayout>

</LinearLayout>